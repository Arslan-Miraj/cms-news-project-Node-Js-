
<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading"><i class="fa fa-gears"></i> All Categories</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-category">Add category</a>
            </div>
            <div class="col-md-12">
                <div id="categoryTable"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>
<script src="https://cdn.jsdeliver.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>    
const tableData = <%- JSON.stringify(categories) %>;
// console.log(tableData);

var table = new Tabulator("#categoryTable", {
  data: tableData,
  layout:"fitColumns",
  pagination:true,
  paginationSize:10,
  paginationSizeSelector:[10, 20, 50, 100],
  columns:[
    {title:"#", formatter: "rownum", width: 60, hozAlign: "center"},
    {title:"Name", field:"name", headerFilter:"input"},
    {title:"Slug", field:"slug"},
    {title:"Description", field:"description", headerFilter:"input"},
    {title:"Role", field:"role", headerFilter:"input"},
    {title: "Actions", formatter: function(cell, formatterParams, onRendered){
      return `<a href="/admin/update-category/${cell.getData()._id}" class="btn btn-sm btn-success">Edit</a>
              <button class="btn btn-sm btn-danger delete-category" onclick="deleteCategory('${cell.getData()._id}')">Delete</button>`;
    }}
  ],
})


// Delete Category
async function deleteCategory(id) {
  try {
    if (confirm('Are you sure you want to delete this category?')) {
        const response = await fetch(`/admin/delete-category/${id}`, {
        method: 'DELETE'
      })
