<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading"><i class="fa fa-file-text"></i> All Articles</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-article">Add New Article</a>
            </div>
            <div class="col-md-12">
                <div id="articleTable"></div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>
<script src="https://cdn.jsdeliver.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>    
const tableData = <%- JSON.stringify(articles) %>;
// console.log(tableData);

var table = new Tabulator("#articleTable", {
  data: tableData,
  layout:"fitColumns",
  pagination:true,
  paginationSize:10,
  paginationSizeSelector:[10, 20, 50, 100],
  columns:[
    {title:"#", formatter: "rownum", width: 60, hozAlign: "center"},
    {title:"Date", field:"timestamps", headerFilter:"input", formatter: (cell) =>
        {
            const d = new Date(cell.getValue())
            return d.toLocaleDateString("en-GB", {
            day: "2-digit",
            month: "short",
            year: "numeric"
            })
        }
    },
    {title:"Title", field:"title", headerFilter:"input"},
    {title:"Category", field:"category.name"},
    {title:"Author", field:"author.full_name", headerFilter:"input"},
    {title: "Actions", formatter: function(cell, formatterParams, onRendered){
      return `<a href="/admin/update-article/${cell.getData()._id}" class="btn btn-sm btn-success">Edit</a>
              <button class="btn btn-sm btn-danger delete-article" onclick="deleteArticle('${cell.getData()._id}')">Delete</button>`;
    }}
  ],
})


