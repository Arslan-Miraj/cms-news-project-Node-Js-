<% if (errors.length > 0) { %>
    <div class="mt-3">
        <div class="alert alert-danger" role="alert">
            <ul class="mb-0">
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
        </div>
    </div>
<% } %>